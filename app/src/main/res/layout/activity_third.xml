<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_title_third"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_ll_search"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/search"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_search_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/et_bg_shape"
           />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center_vertical"
        android:textSize="15sp"
        android:clickable="true"
        android:onClick="cancel"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv1_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_title_third"
        android:padding="5dp"
        android:text="热词搜索"
        android:textSize="13sp"
        android:textStyle="bold"
        android:background="#e9e1e1"/>
    <com.nms.mydemo.seashell.layout.FlowViewGroup
        android:id="@+id/container_hot_word"
        android:layout_below="@+id/tv1_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </com.nms.mydemo.seashell.layout.FlowViewGroup>
    <TextView
        android:id="@+id/tv2_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_hot_word"
        android:padding="5dp"
        android:text="最近搜索"
        android:textSize="13sp"
        android:textStyle="bold"
        android:background="#e9e1e1"/>
    <ListView
        android:id="@+id/lv_third_activity"
        android:layout_below="@id/tv2_third"
        android:layout_above="@+id/tv_clear_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
    <TextView
        android:id="@+id/tv_clear_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="clear"
        android:layout_marginBottom="10dp"
        />
    </RelativeLayout>